{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importsNotUsedAsValues": "error",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.js"
  ],
  "compileOnSave": true
}
